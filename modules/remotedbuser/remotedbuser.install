<?php

/**
 * @file
 * Installation for Remote database user.
 */

/**
 * Implements hook_schema_alter().
 * @param array $schema
 * @return void
 */
function remotedbuser_schema_alter(&$schema) {
  $schema['users']['fields']['remotedb_uid'] = array(
    'type' => 'int',
    'not null' => TRUE,
    'default' => 0,
  );
}

/**
 * Implements hook_install().
 * @return array
 */
function remotedbuser_install() {
  $ret = array();
  $field = array(
    'type' => 'int',
    'not null' => TRUE,
    'default' => 0,
    'initial' => 0,
  );
  $ret[] = db_add_field('users', 'remotedb_uid', $field);
  return $ret;
}

/**
 * Implements hook_uninstall().
 * @return array
 */
function remotedbuser_uninstall() {
  $ret = array();
  $ret[] = db_drop_field('users', 'remotedb_uid');
  return $ret;
}
